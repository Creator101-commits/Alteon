# Example Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Supabase Configuration
# Get these from your Supabase project settings (Settings > API)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Database Configuration (for Drizzle migrations)
# Use your Supabase connection string from Settings > Database
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres

# Firebase Configuration
# Get these from your Firebase project settings
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id_here
VITE_FIREBASE_APP_ID=your_firebase_app_id_here

# Groq AI Configuration
# Get API key from https://console.groq.com/
VITE_GROQ_API_KEY=your_groq_api_key_here

# Google OAuth (for Calendar & Classroom sync)
# Get from Google Cloud Console
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_GOOGLE_API_KEY=your_google_api_key_here

# Node Environment
NODE_ENV=development
